    <link href="/2021/08/11/%E4%BF%AE%E5%A4%8Ddebian-testing%E5%9C%A8vmware%E4%B8%8B%E4%B8%8D%E8%83%BD%E4%BB%8E%E5%AE%BF%E4%B8%BB%E6%9C%BA%E5%A4%8D%E5%88%B6%E7%B2%98%E8%B4%B4%E7%9A%84%E9%97%AE%E9%A2%98/"/>
